{% set COMPUTE_URL_BASE = 'https://www.googleapis.com/compute/v1/' %}
{% set ID = env['deployment'] + '-' + env['name'] %}
{% set DBFLAGS = true if properties['databaseFlags'] else false %}

resources:
- name: {{ ID }}-allow-ssh
  type: compute.v1.firewall
  properties:
    targetTags:
      - {{ ID }}-ssh
    allowed:
    - IPProtocol: tcp
      ports: 
        - 22

- name: {{ ID }}-mysqlclient-address
  type: compute.v1.address
  properties:
    region: {{ properties["region"] }}

- name: {{ ID }}-mysqlclient
  type: compute.v1.instance
  properties:
    machineType: zones/{{ properties['zone'] }}/machineTypes/{{ properties['machineType'] }}
    zone: {{ properties['zone'] }}
    metadata:
      items:
        - key: startup-script
          value: |
            {{ imports['startup-script.sh']|indent(12) }}
        - key: ssh-keys
          value: | 
            {{ imports['id_rsa_gce.pub']|indent(12) }}
        - key: block-project-ssh-keys
          value: 'FLASE'
    disks:
      - deviceName: boot
        boot: true
        autoDelete: true
        mode: READ_WRITE
        type: PERSISTENT
        initializeParams:
          diskSizeGb: {{ properties['dataDiskSizeGb'] }}
          sourceImage: {{ properties["sourceImage" ] }}
    networkInterfaces:
      - name: {{ ID }}-eth0
        network: {{ properties['network'] }}
        subnetwork: regions/{{ properties['region'] }}/subnetworks/{{ properties['subnet'] }}
        accessConfigs:
          - name: eth0
            type: ONE_TO_ONE_NAT
            natIP: $(ref.{{ ID }}-mysqlclient-address.address)
    serviceAccounts:
      - email: {{ properties['serviceAccount'] }}
        scopes:
          - 'https://www.googleapis.com/auth/cloud-platform'
    tags:
      items:
        - {{ ID }}-ssh

- name: {{ ID }}-master
  type: sqladmin.v1beta4.instance
  properties:
    backendType: SECOND_GEN
    instanceType: CLOUD_SQL_INSTANCE
    databaseVersion: {{ properties['databaseVersion'] }}
    region: {{ properties['region'] }}
    settings:
      tier: {{ properties['tier'] }}
      dataDiskSizeGb: {{ properties['dataDiskSizeGb'] }}
      dataDiskType: {{ properties['dataDiskType'] }}
      storageAutoResize: true
      replicationType: SYNCHRONOUS
      locationPreference:
        zone: {{ properties['zone'] }}
      {% if DBFLAGS %}
      databaseFlags: {{ properties['databaseFlags'] }}
      {% endif %}
      activationPolicy: ALWAYS
      backupConfiguration:
        enabled: true
        binaryLogEnabled: true
        startTime: {{ properties['backupStartTime'] }}
      ipConfiguration:
        authorizedNetworks:
          - value: $(ref.{{ ID }}-mysqlclient-address.address)

{% if properties['failover'] %}
- name: {{ ID }}-failover
  type: sqladmin.v1beta4.instance
  properties:
    backendType: SECOND_GEN
    instanceType: READ_REPLICA_INSTANCE
    databaseVersion: {{ properties['databaseVersion'] }}
    region: {{ properties['region'] }}
    masterInstanceName: $(ref.{{ ID }}-master.name)
    replicaConfiguration:
      failoverTarget: true
    settings:
      tier: {{ properties['tier'] }}
{% endif %}

{% for i in range(properties['readreplicas']) %}
- name: {{ ID }}-rr-{{ i }}
  type: sqladmin.v1beta4.instance
  properties:
    backendType: SECOND_GEN
    instanceType: READ_REPLICA_INSTANCE
    databaseVersion: {{ properties['databaseVersion'] }}
    region: {{ properties['region'] }}
    masterInstanceName: $(ref.{{ ID }}-master.name)
    replicaConfiguration:
      failoverTarget: false
    settings:
      tier: {{ properties['tier'] }}
{% endfor %}

- name: {{ ID }}-db
  type: sqladmin.v1beta4.database
  properties:
    name: {{ properties['databaseName'] }}
    instance: $(ref.{{ ID }}-master.name)
    charset: {{ properties['charset'] }}

- name: {{ ID }}-db-root
  type: sqladmin.v1beta4.user
  properties:
    name: root
    host: '%'
    instance: $(ref.{{ ID }}-master.name)
    password: {{ properties['dbRootPassword'] }}

outputs:
  - name: mysqlclient
    value: $(ref.{{ ID }}-mysqlclient.networkInterfaces[0].networkIP)
  - name: cloudsql-ip
    value: $(ref.{{ ID }}-master.ipAddresses[0].ipAddress)
